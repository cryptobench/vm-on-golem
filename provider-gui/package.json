{
  "name": "provider-gui",
  "version": "1.0.10",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack:cli": "python ../scripts/build_provider_cli.py --onefile",
    "pack:win": "npm run pack:cli && electron-builder --win nsis",
    "pack:mac": "npm run pack:cli && electron-builder --mac dmg pkg",
    "pack:linux": "npm run pack:cli && electron-builder --linux deb AppImage",
    "pack": "npm run pack:cli && electron-builder -mwl",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": {
    "name": "Phillip Jensen",
    "email": "phillip+vm-on-golem@golemgrid.com"
  },
  "homepage": "https://github.com/cryptobench/vm-on-golem",
  "repository": {
    "type": "git",
    "url": "https://github.com/cryptobench/vm-on-golem"
  },
  "license": "ISC",
  "description": "Golem Provider desktop app with embedded CLI",
  "devDependencies": {
    "electron": "^35.1.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.golemgrid.provider",
    "productName": "Golem Provider",
    "files": [
      "**/*",
      "!resources/cli/**"
    ],
    "extraResources": [
      {
        "from": "resources/cli",
        "to": "cli",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "pkg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "extendInfo": {
        "LSBackgroundOnly": false
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh",
      "warningsAsErrors": false
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "maintainer": "GolemGrid <support@golemgrid.com>"
    },
    "deb": {
      "afterInstall": "build/linux/after-install.sh",
      "afterRemove": "build/linux/after-remove.sh"
    },
    "pkg": {
      "allowAnywhere": true,
      "scripts": "build/macos"
    }
  }
}
